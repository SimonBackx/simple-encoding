{
    "editor.formatOnSave": true,
    "search.exclude": {
        "**/dist": true
    },
    "eslint.options": {
        "extensions": [
            ".js",
            ".ts"
        ]
    },
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    "typescript.tsdk": "./node_modules/typescript/lib",
    "editor.formatOnPaste": true,
    "eslint.format.enable": true,
    // Prettier acts fucked up in vue, typescript and javascript, so we let eslint format vue files
    "eslint.validate": [
        "typescript",
        "javascript"
    ],
    "prettier.disableLanguages": [
        "typescript",
        "javascript"
    ]
}