{
    "name": "@simonbackx/simple-encoding",
    "main": "./dist/index.js",
    "module": "./esm/dist/index.js",
    "types": "./dist/index.d.ts",
    "version": "2.19.0",
    "sideEffects": false,
    "type": "commonjs",
    "exports": {
        ".": {
            "import": "./esm/dist/index.mjs",
            "require": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
    "scripts": {
        "build": "yarn build-cjs && yarn build-esm",
        "build-cjs": "tsc -p . --declaration",
        "build-esm": "tsc -p esm --declaration && mv esm/dist/index.js esm/dist/index.mjs",
        "lint": "eslint",
        "test": "jest"
    },
    "files": [
        "dist",
        "esm/dist",
        "esm/package.json"
    ],
    "peerDependencies": {
        "@simonbackx/simple-errors": "^1.4.0"
    },
    "devDependencies": {
        "@simonbackx/simple-encoding": "file:.",
        "@simonbackx/simple-errors": "^1.4.0",
        "@types/jest": "^26.0.20",
        "@types/node": "^13.13.4",
        "jest": "^26.6.3",
        "ts-jest": "^26.5.6",
        "typescript": "^5.4.5",
        "uuid": "^9.0.0",
        "@eslint/js": "^9.11.1",
        "eslint": "^9.11.1",
        "eslint-plugin-stamhoofd": "^2.74.0"
    }
}