{
    "compilerOptions": {
        "target": "es2017",
        "module": "esnext",
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "outDir": "dist/",
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ],
        "types": [
            "node",
            "jest"
        ]
    },
    "include": [
        "index.ts",
        "src/**/*.ts",
        "*.d.ts" // Include vue type definition for webpack
    ],
    "exclude": [
        "node_modules"
    ]
}